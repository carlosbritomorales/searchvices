<%- layout('layouts/main.ejs') %>


<div class="col-md-4 offset-md-4">
    <div class="card mt-2 text-center">
      <div class="card-header"><h3>Servicio de "<%= service.title %>"</h3></div>
        <div class="card-body">
            <form action="/addrequest" method="post">
              <div class="form-group">
                <input id="hidden_field" name="title" type="hidden" value="<%= service.title %>" />
              </div>
              <div class="form-group">
                  <input id="hidden_field" name="providername" type="hidden" value="<%= service.username %>" />
                </div>
                <div class="form-group">
                    <input id="hidden_field" name="requestdate" type="hidden" value="<%= moment().format('D [de] MMMM [del] YYYY, h:mm:ss A') %>" />
                  </div>
                  <p class="text-justify"><%= service.description %></p>
                  <p> <%= service.title %> / <%= service.category %><br>->Ofrecido por <a href="/publicprofile/<%= service.id %>"><%= service.username %></a><br></p>
                  
            </form>
        </div>
    </div>
</div>


      
        
    